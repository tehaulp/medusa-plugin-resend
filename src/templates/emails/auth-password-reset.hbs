<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>Password Reset</title>
    <style>
      /* Reset auth password */
      body,
      table,
      td,
      a {
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
      }
      table,
      td {
        mso-table-lspace: 0pt;
        mso-table-rspace: 0pt;
      }
      img {
        -ms-interpolation-mode: bicubic;
        border: 0;
        outline: none;
        text-decoration: none;
        display: block;
      }
      body {
        margin: 0;
        padding: 0;
        width: 100% !important;
        height: 100% !important;
        font-family: Arial, sans-serif;
      }
      a {
        color: #203059;
        text-decoration: underline;
      }
    </style>
  </head>
  <body style="background-color: #f5f5f5; margin: 0; padding: 0">
    <!-- Wrapper -->
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" style="padding: 20px 10px">
          <!-- Email Container -->
          <table
            border="0"
            cellpadding="0"
            cellspacing="0"
            width="100%"
            style="max-width: 600px; background-color: #f3eee9"
          >
            <!-- Header -->
            <tr>
              <td>
                <img
                  src="https://tehaulp.github.io/image-storage/text-logo.png"
                  alt="Logo"
                  width="250"
                  height="100"
                  style="object-fit: cover;"
                />
              </td>
            </tr>

            <!-- Body content -->
            <tr>
              <td
                align="left"
                style="
                  padding: 30px 20px;
                  font-size: 16px;
                  line-height: 1.5;
                  color: #203059;
                "
              >
                Hello,
                <br />
                <br />
                You requested to reset your password, click on this link to
                continue:
                <br />
                <br />
                <a href="{{resetUrl}}" style="color: #203059">Reset my password</a>.
              </td>
            </tr>

            <!-- Footer -->
            <tr>
              <td
                align="center"
                style="
                  background-color: #203059;
                  padding: 30px 20px;
                  color: #ffffff;
                "
              >
                <!-- Logo icon -->
                <img
                  src="https://tehaulp.github.io/image-storage/logo.png"
                  alt="Logo"
                  width="25"
                  style="margin-bottom: 12px"
                />

                <!-- Slogan -->
                <div
                  style="
                    font-size: 16px;
                    font-weight: bold;
                    margin-bottom: 12px;
                  "
                >
                  Get to know us!
                </div>

                <!-- Social icons -->
                <table
                  border="0"
                  cellpadding="0"
                  cellspacing="0"
                  align="center"
                  style="margin-bottom: 16px"
                >
                  <tr>
                    <td align="center" style="padding: 0 8px">
                      <a href="https://www.facebook.com"><img
                          src="https://tehaulp.github.io/image-storage/facebook.png"
                          alt="Facebook"
                          width="24"
                          height="24"
                        /></a>
                    </td>
                    <td align="center" style="padding: 0 8px">
                      <a href="https://www.instagram.com"><img
                          src="https://tehaulp.github.io/image-storage/instagram.png"
                          alt="Instagram"
                          width="24"
                          height="24"
                        /></a>
                    </td>
                    <td align="center" style="padding: 0 8px">
                      <a href="https://www.tiktok.com"><img
                          src="https://tehaulp.github.io/image-storage/tiktok.png"
                          alt="TikTok"
                          width="24"
                          height="24"
                        /></a>
                    </td>
                  </tr>
                </table>

                <!-- Footer text -->
                <div style="font-size: 12px; line-height: 1.4; color: #d9dbe1">
                  Need help? Contact us via
                  <span style="color: white">service@company.com</span><br />
                  <a
                    href="#"
                    style="color: #d9dbe1; text-decoration: underline"
                  >Login</a>
                  |
                  <a
                    href="#"
                    style="color: #d9dbe1; text-decoration: underline"
                  >Visit</a>
                </div>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>